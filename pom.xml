<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>io.wcm.dromas.maven</groupId>
    <artifactId>io.wcm.dromas.maven.dromas-global-parent</artifactId>
    <version>0.2.0-SNAPSHOT</version>
    <relativePath/>
  </parent>

  <groupId>io.wcm.dromas</groupId>
  <artifactId>io.wcm.dromas.root</artifactId>
  <version>1</version>
  <packaging>pom</packaging>

  <name>wcm.io Dromas Root</name>
  <description>Root POM for wcm.io Dromas Maven hierarchy.</description>

  <modules>
    <module>parent_toplevel</module>
    <module>commons/stream</module>
    <module>commons/hal</module>
    <module>commons/jsonpath</module>
    <module>io/http</module>
  </modules>

  <build>
    <plugins>

      <!-- do not deploy this hierarchy pom into maven repository -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-deploy-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>

      <!-- do not generate site for this project -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-site-plugin</artifactId>
        <configuration>
          <skipDeploy>true</skipDeploy>
        </configuration>
      </plugin>

    </plugins>
    <pluginManagement>
      <plugins>

        <!-- license check -->
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>license-maven-plugin</artifactId>
          <configuration>
            <licenseName>apache_v2</licenseName>
            <addJavaLicenseAfterPackage>false</addJavaLicenseAfterPackage>
            <projectName>wcm.io</projectName>
          </configuration>
        </plugin>

      </plugins>
    </pluginManagement>
  </build>

  <distributionManagement>
    <site>
      <id>${site.deploy.id}</id>
      <url>${site.deploy.url}root</url>
    </site>
  </distributionManagement>

</project>
